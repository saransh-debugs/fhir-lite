generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id        String   @id
  name      String?
  birthDate DateTime?
  encounters Encounter[]
  observations Observation[]
}

model Encounter {
  id        String   @id
  patientId String
  start     DateTime?
  end       DateTime?
  type      String?
  patient   Patient  @relation(fields: [patientId], references: [id])
  @@index([patientId])
}

model Observation {
  id        String   @id
  patientId String
  code      String?
  valueNum  Float?
  unit      String?
  issued    DateTime?
  patient   Patient @relation(fields: [patientId], references: [id])
  @@index([patientId, issued])
}

model DicomStudy {
  studyInstanceUID String @id
  patientId        String?
  studyDate        String?
  series           DicomSeries[]
}

model DicomSeries {
  seriesInstanceUID String @id
  studyInstanceUID  String
  modality          String?
  study             DicomStudy @relation(fields: [studyInstanceUID], references: [studyInstanceUID])
  instances         DicomInstance[]
  @@index([studyInstanceUID])
}

model DicomInstance {
  sopInstanceUID    String @id
  seriesInstanceUID String
  studyInstanceUID  String
  series            DicomSeries @relation(fields: [seriesInstanceUID], references: [seriesInstanceUID])
  @@index([seriesInstanceUID])
  @@index([studyInstanceUID])
}

